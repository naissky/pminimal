---
import { headerData, projectData } from "../data";
import AnimatedModal from "./core/AnimatedModal";
---

<section class="mt-10">
    <div class="mb-10">
        <p class="text-zinc-600 text-lg">{headerData.description}</p>
    </div>
  <h2 class="font-medium text-lg text-black">Proyectos Seleccionados</h2>
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-10 py-5">
    {
      projectData.slice(0, 2).map((project) => (
        <div class="col-span-2 space-y-2">
          <AnimatedModal
            client:load
            image={`${project.image}`}
            title={project.title}
            description={project.description}
          />
        </div>
      ))
    }
  </div>
</section>
